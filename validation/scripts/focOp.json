{
  "what": "tests of focOp test",
  "strict": true,
  "commands": [
    {
      "type": "launch",
      "which": "chromium",
      "what": "usual browser"
    },
    {
      "type": "url",
      "which": "file://__dirname/validation/targets/focOp/good.html",
      "what": "page with standard focusability and operability"
    },
    {
      "type": "test",
      "which": "focOp",
      "what": "focusability and operability",
      "withItems": false,
      "expect": [
        ["totals.total", "=", 3],
        ["totals.onlyFocusable.total", "=", 0],
        ["totals.onlyOperable.total", "=", 0],
        ["totals.focusableAndOperable.total", "=", 3],
        ["totals.focusableAndOperable.tagNames.A", "=", 1],
        ["totals.focusableAndOperable.tagNames.BUTTON", "=", 1],
        ["totals.focusableAndOperable.tagNames.INPUT", "=", 1]
      ]
    },
    {
      "type": "url",
      "which": "file://__dirname/validation/targets/focOp/bad.html",
      "what": "page with deviant focusability and operability"
    },
    {
      "type": "test",
      "which": "focOp",
      "what": "focusability and operability",
      "withItems": false,
      "expect": [
        ["totals.total", "=", 6],
        ["totals.onlyFocusable.total", "=", 1],
        ["totals.onlyFocusable.tagNames.SPAN", "=", 1],
        ["totals.onlyOperable.total", "=", 3],
        ["totals.onlyOperable.tagNames.BUTTON", "=", 1],
        ["totals.onlyOperable.tagNames.SPAN", "=", 2],
        ["totals.focusableAndOperable.total", "=", 2],
        ["totals.focusableAndOperable.tagNames.LINK", "=", 1],
        ["totals.focusableAndOperable.tagNames.INPUT", "=", 1]
      ]
    }
  ]
}
